<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.control.Button?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.harry_potter_javafx.HelloController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <!-- Place the background image (HarryPotter.jpg) as an ImageView -->
    <ImageView>
        <Image url="/way1.jpeg"/>
    </ImageView>

    <!-- Place the VBox on top of the background image -->
    <VBox alignment="BOTTOM_RIGHT" spacing="20.0">
        <Label fx:id="nextText"/>
        <Button text="Next" style="-fx-text-fill: black;
    -fx-font-family: 'Papyrus';
    -fx-font-size: 2em;
    -fx-pref-width: 6em;
    -fx-pref-height: 1em;
    -fx-background-color: rgba(255, 255, 255, 0.3);
    -fx-background-radius: 10px;
    -fx-border-color: #000000;
    -fx-border-width: 1px;
    -fx-border-radius: 10px;" />
    </VBox>
</StackPane>
