<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.control.Button?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.HPFX.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Place the background image (HarryPotter.jpg) as an ImageView -->
    <ImageView fitWidth="1920" fitHeight="1080">
        <Image url="/HarryPotter.jpg"/>
    </ImageView>

    <!-- Place the VBox on top of the background image -->
    <VBox alignment="CENTER" spacing="20.0">
        <Label fx:id="startingText"/>
        <Button text="Start" onAction="#onStartButtonClick" style="-fx-text-fill: #ffffff;
            -fx-font-family: 'Papyrus';
            -fx-font-size: 4em;
            -fx-background-color: rgba(0, 0, 0, 0.5);
            -fx-background-radius: 40px;
            -fx-border-color: #000000;
            -fx-border-width: 3px;
            -fx-border-radius: 40px;" >
            <padding>
                <Insets right="50" left="50" />
            </padding>
        </Button>
    </VBox>
</StackPane>